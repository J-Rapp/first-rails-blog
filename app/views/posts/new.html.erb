<h1>New Post!!!</h1>

<%= form_for :post, url: posts_path do |form| %>

<% if @post.errors.any? %>
	<div>
		<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving.</h2>
		<ul>
		 <% @post.errors.each do |message| %>
		 	<li><%= message %></li>
		 <% end %>
		</ul>
	</div>
<% end %>

	<%= form.label :title %><br>
	<%= form.text_field :title %><br>

	<%= form.label :body %><br>
	<%= form.text_area :body %><br>

	<%= form.submit %>
<% end %>